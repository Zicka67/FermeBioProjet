<div id="pageOverlay" class="page-overlay"></div>
<div class="cart-sidebar" id="cartSidebar">
    <div class="cart-title">
        <h2>Votre panier</h2>
        <span class="close-cart toggle-cart">×</span> 
    </div>
    {% if app.flashes %}
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}
    {% endif %}
    {% if cart is defined and cart|length > 0 %}
        {% for item in cart %}
            <div class="cart-item">
                <div class="cart-item-details">
                    <div>
                        <strong>{{ item.product.name }}</strong><br>
                        {{ item.product.productPrice }} €
                    </div>
                </div>
                <div class="cart-item-quantity">
                    <a href="{{ path('decrement_quantity', { 'id': item.product.id }) }}" class="quantity-btn">-</a>
                    <span>{{ item.quantity }}</span>
                    <a href="{{ path('increment_quantity', { 'id': item.product.id }) }}" class="quantity-btn">+</a>
                </div>
            </div>
        {% endfor %}
        <div class="cart-footer">
            <div class="subtotal">
                <span>Vous devrez payer sur place :</span>
                <span id="cart-total" data-total="{{ cartTotal }}">{{ cartTotal }}0 €</span>
            </div>
            <div class="cart-buttons">
                <a id="reset-button" href="{{ path('reset_cart') }}" class="button">Réinitialiser le panier</a>
                <a id="pickupOption" href="#" class="button">Sélectionner le jour</a>
                {# <button id="pickupOption" class="button">Sélectionner le jour</button> #}
            </div>
        </div>
        
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
</div>

<div class="pickup-details-page">
    <div class="calendar-header">
        <h3>Veuillez choisir une date pour récupérer votre panier:</h3>
        <span class="close-calendar">&times;</span>
    </div>
    {# <p>Veuillez choisir une date pour récupérer votre panier:</p> #}
    <select id="pickupLocation">
        <option value="location1">Adresse 1</option>
        <option value="location2">Adresse 2</option>
    </select>
    <div id="calendarContainer"></div>
</div>
