{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor %}
        </div>
    {% endfor %}

<div class="contact-header">
<h1 class="contact-title">Vous souhaitez des informations sur un produits ? Vous souhaitez annuler une réservation ?</h1>
</div>

<div class="map-form-container">

<div class="form-contact-container" data-aos="fade-right" data-aos-duration="2000">

    {{ form_start(contact_form, {'attr': {'class': 'form-contact'}}) }}{{ form_errors(contact_form) }}

        <div>
            {{ form_label(contact_form.pseudo) }}
            {{ form_widget(contact_form.pseudo, {'attr': {'class': 'form-control'}}) }}
            <div class="error-test">{{ form_errors(contact_form.pseudo) }}</div> 

        </div>
        <div>
            {{ form_label(contact_form.email) }}
            {{ form_widget(contact_form.email, {'attr': {'class': 'form-control'}}) }}
            <div class="error-test">{{ form_errors(contact_form.email) }}</div> 
        </div>
        <div>
            {{ form_label(contact_form.sujet) }}
            {{ form_widget(contact_form.sujet, {'attr': {'class': 'form-control'}}) }}
            <div class="error-test">{{ form_errors(contact_form.sujet) }}</div> 
        </div>
        <div>
            {{ form_label(contact_form.message) }}
            {{ form_widget(contact_form.message, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            <div class="error-test">{{ form_errors(contact_form.message) }}</div> 
        </div>

        <button type="submit" class="bt" id="bt"><span class="msg" id="msg"></span><p class="envoyer">Envoyer</p> </button>


    {{ form_end(contact_form) }}
    

</div>


{# <div id="map" alt="Carte de l'endroit ou se passe les cours pour le Cercle des bébés" data-aos="fade-left" data-aos-duration="2000"></div> #}

</div>

{% endblock %}

